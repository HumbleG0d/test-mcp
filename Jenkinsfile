pipeline {
    agent any
    
    environment {
        // Variables de configuraci√≥n
        APP_NAME = 'express-metrics-api'
        DOCKER_IMAGE = "${APP_NAME}:${BUILD_NUMBER}"
        DOCKER_LATEST = "${APP_NAME}:latest"
        DOCKER_REGISTRY = 'your-registry.com' // Cambiar por tu registry
        NODE_VERSION = '18'
        
        // Credenciales
        DOCKER_CREDENTIALS = credentials('docker-registry-credentials')
        KUBECONFIG = credentials('kubernetes-config')
        
        // OpenTelemetry
        OTEL_SERVICE_NAME = "${APP_NAME}"
        OTEL_SERVICE_VERSION = "${BUILD_NUMBER}"
        OTEL_EXPORTER_OTLP_ENDPOINT = 'http://otel-collector:4318'
    }
    
    options {
        // Configuraciones del pipeline
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timeout(time: 20, unit: 'MINUTES')
        skipStagesAfterUnstable()
        parallelsAlwaysFailFast()
    }
    
    stages {
        stage('üìã Checkout') {
            steps {
                script {
                    // Limpiar workspace si es necesario
                    if (env.CLEAN_WORKSPACE == 'true') {
                        cleanWs()
                    }
                }
                
                // Checkout del c√≥digo
                checkout scm
                
                script {
                    // Variables globales
                    env.GIT_COMMIT_SHORT = sh(
                        script: "git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()
                    
                    env.GIT_BRANCH_NAME = sh(
                        script: "git rev-parse --abbrev-ref HEAD",
                        returnStdout: true
                    ).trim()
                }
                
                echo "üîç Building commit: ${env.GIT_COMMIT_SHORT}"
                echo "üåø Branch: ${env.GIT_BRANCH_NAME}"
            }
        }
        
        stage('üõ†Ô∏è Setup Environment') {
            parallel {
                stage('Node.js Setup') {
                    steps {
                        script {
                            // Instalar Node.js usando NodeJS plugin
                            def nodeHome = tool name: "NodeJS-${NODE_VERSION}", type: 'nodejs'
                            env.PATH = "${nodeHome}/bin:${env.PATH}"
                        }
                        
                        // Verificar versiones
                        sh '''
                            echo "üì¶ Node.js version:"
                            node --version
                            echo "üì¶ NPM version:"
                            npm --version
                        '''
                    }
                }
                
                stage('Docker Setup') {
                    steps {
                        script {
                            // Verificar Docker
                            sh '''
                                echo "üê≥ Docker version:"
                                docker --version
                                docker info
                            '''
                        }
                    }
                }
            }
        }
        
        stage('üì¶ Dependencies') {
            steps {
                // Cache de dependencias usando Jenkins cache
                cache(caches: [
                    arbitraryFileCache(
                        path: 'node_modules',
                        fingerprint: [
                            file('package.json'),
                            file('package-lock.json')
                        ]
                    )
                ]) {
                    sh '''
                        echo "üì¶ Installing dependencies..."
                        npm ci --prefer-offline --no-audit
                        
                        echo "üìä Dependency audit:"
                        npm audit --audit-level moderate || true
                        
                        echo "üìã Installed packages:"
                        npm list --depth=0
                    '''
                }
            }
        }
        
        stage('üîç Code Quality') {
            parallel {
                stage('Linting') {
                    steps {
                        sh '''
                            echo "üîç Running ESLint..."
                            npm run lint || true
                        '''
                        
                        // Publicar resultados de linting
                        publishHTML([
                            allowMissing: false,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: '.',
                            reportFiles: 'eslint-report.html',
                            reportName: 'ESLint Report'
                        ])
                    }
                }
                
                stage('Security Scan') {
                    steps {
                        sh '''
                            echo "üîí Running security audit..."
                            npm audit --audit-level high --json > security-audit.json || true
                            
                            echo "üîç Checking for known vulnerabilities..."
                            npx audit-ci --moderate || true
                        '''
                    }
                }
            }
        }
        
        stage('üß™ Testing') {
            parallel {
                stage('Unit Tests') {
                    steps {
                        sh '''
                            echo "üß™ Running unit tests..."
                            npm test -- --coverage --ci --reporters=default --reporters=jest-junit
                        '''
                        
                        // Publicar resultados de pruebas
                        publishTestResults testResultsPattern: 'junit.xml'
                        
                        // Publicar cobertura de c√≥digo
                        publishCoverage adapters: [
                            istanbulCoberturaAdapter('coverage/cobertura-coverage.xml')
                        ], sourceFileResolver: sourceFiles('STORE_LAST_BUILD')
                    }
                    post {
                        always {
                            // Archivar reportes de cobertura
                            publishHTML([
                                allowMissing: false,
                                alwaysLinkToLastBuild: true,
                                keepAll: true,
                                reportDir: 'coverage/lcov-report',
                                reportFiles: 'index.html',
                                reportName: 'Coverage Report'
                            ])
                        }
                    }
                }
                
                stage('Integration Tests') {
                    steps {
                        sh '''
                            echo "üîó Running integration tests..."
                            # Aqu√≠ puedes agregar tests de integraci√≥n
                            # npm run test:integration || true
                        '''
                    }
                }
            }
        }
        
        stage('üèóÔ∏è Build Docker Image') {
            steps {
                script {
                    // Construir imagen Docker
                    def image = docker.build("${DOCKER_IMAGE}", ".")
                    
                    // Etiquetar como latest si es la rama main
                    if (env.GIT_BRANCH_NAME == 'main') {
                        image.tag('latest')
                    }
                    
                    // Guardar imagen para uso posterior
                    env.DOCKER_IMAGE_ID = image.id
                }
                
                echo "üê≥ Docker image built: ${DOCKER_IMAGE}"
            }
        }
        
        stage('üîí Security Scanning') {
            parallel {
                stage('Container Security') {
                    steps {
                        script {
                            try {
                                // Escaneo con Trivy (si est√° disponible)
                                sh """
                                    echo "üîç Scanning Docker image for vulnerabilities..."
                                    docker run --rm -v /var/run/docker.sock:/var/run/docker.sock \\
                                        -v \$(pwd):/tmp/trivy \\
                                        aquasec/trivy:latest image --exit-code 0 --format json \\
                                        --output /tmp/trivy/trivy-report.json ${DOCKER_IMAGE} || true
                                """
                            } catch (Exception e) {
                                echo "‚ö†Ô∏è Container security scan failed: ${e.getMessage()}"
                            }
                        }
                    }
                }
                
                stage('Code Security') {
                    steps {
                        script {
                            try {
                                sh '''
                                    echo "üîç Running SAST security scan..."
                                    # Ejemplo con Semgrep (si est√° disponible)
                                    # docker run --rm -v $(pwd):/src returntocorp/semgrep --config=auto /src || true
                                '''
                            } catch (Exception e) {
                                echo "‚ö†Ô∏è SAST scan failed: ${e.getMessage()}"
                            }
                        }
                    }
                }
            }
        }
        
        stage('üöÄ Deploy to Staging') {
            when {
                anyOf {
                    branch 'main'
                    branch 'develop'
                }
            }
            dir('runbooks'){
                steps {
                script {
                    try {
                        // Deploy a staging usando docker-compose
                        sh '''
                            echo "üöÄ Deploying to staging environment..."
                            
                            # Detener contenedores existentes
                            docker-compose -f docker-compose-api.yml down || true
                            
                            # Limpiar im√°genes antigas
                            docker image prune -f
                            
                            # Variables de entorno para staging
                            export IMAGE_TAG=${BUILD_NUMBER}
                            export ENVIRONMENT=staging
                            export OTEL_SERVICE_VERSION=${BUILD_NUMBER}
                            
                            # Deploy con nueva imagen
                            docker-compose -f docker-compose-api.yml up -d
                            
                            # Esperar a que el servicio est√© listo
                            echo "‚è≥ Waiting for service to be ready..."
                            timeout 60s bash -c 'until curl -f http://localhost:3000/health; do sleep 2; done'
                        '''
                        
                        echo "‚úÖ Staging deployment successful"
                        
                    } catch (Exception e) {
                        error("‚ùå Staging deployment failed: ${e.getMessage()}")
                    }
                }
            }
            }
        }
        
        stage('üß™ Smoke Tests') {
            when {
                anyOf {
                    branch 'main'
                    branch 'develop'
                }
            }
            steps {
                script {
                    try {
                        sh '''
                            echo "üß™ Running smoke tests against staging..."
                            
                            # Test health endpoint
                            echo "Testing health endpoint..."
                            curl -f http://localhost:3000/health
                            
                            # Test users endpoint
                            echo "Testing users endpoint..."
                            curl -f http://localhost:3000/users
                            
                            # Test metrics endpoint
                            echo "Testing metrics endpoint..."
                            curl -f http://localhost:3000/metrics
                            
                            # Create test user
                            echo "Testing user creation..."
                            curl -f -X POST http://localhost:3000/users \\
                                -H "Content-Type: application/json" \\
                                -d '{"name":"Test User","email":"test@example.com","age":25}'
                            
                            echo "‚úÖ All smoke tests passed"
                        '''
                    } catch (Exception e) {
                        error("‚ùå Smoke tests failed: ${e.getMessage()}")
                    }
                }
            }
        }
        
        stage('üìä Performance Tests') {
            when {
                anyOf {
                    branch 'main'
                    expression { params.RUN_PERFORMANCE_TESTS == true }
                }
            }
            steps {
                script {
                    try {
                        sh '''
                            echo "üìä Running performance tests..."
                            
                            # Instalar Artillery si no est√° disponible
                            npm install -g artillery || true
                            
                            # Crear configuraci√≥n de pruebas de carga
                            cat > artillery-config.yml << EOF
config:
  target: 'http://localhost:3000'
  phases:
    - duration: 60
      arrivalRate: 10
      name: "Warm up"
    - duration: 120
      arrivalRate: 50
      name: "Load test"
scenarios:
  - name: "API Load Test"
    weight: 100
    requests:
      - get:
          url: "/health"
      - get:
          url: "/users"
      - post:
          url: "/users"
          json:
            name: "Load Test User"
            email: "loadtest{{ \\$randomNumber() }}@example.com"
            age: 30
EOF
                            
                            # Ejecutar pruebas de carga
                            artillery run artillery-config.yml --output performance-report.json || true
                            
                            # Generar reporte HTML
                            artillery report performance-report.json --output performance-report.html || true
                        '''
                        
                        // Publicar reporte de performance
                        publishHTML([
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: true,
                            reportDir: '.',
                            reportFiles: 'performance-report.html',
                            reportName: 'Performance Report'
                        ])
                        
                    } catch (Exception e) {
                        echo "‚ö†Ô∏è Performance tests failed: ${e.getMessage()}"
                        unstable("Performance tests failed")
                    }
                }
            }
        }
        
        stage('üè∑Ô∏è Tag & Push Image') {
            when {
                branch 'main'
            }
            steps {
                script {
                    docker.withRegistry("https://${DOCKER_REGISTRY}", 'docker-registry-credentials') {
                        // Push imagen con tag del build
                        def image = docker.image("${DOCKER_IMAGE}")
                        image.push()
                        image.push('latest')
                        
                        echo "üè∑Ô∏è Image pushed: ${DOCKER_REGISTRY}/${DOCKER_IMAGE}"
                    }
                }
            }
        }
        
        stage('üöÄ Deploy to Production') {
            when {
                allOf {
                    branch 'main'
                    expression { params.DEPLOY_TO_PRODUCTION == true }
                }
            }
            steps {
                script {
                    // Solicitar aprobaci√≥n manual para producci√≥n
                    def deployApproved = false
                    try {
                        timeout(time: 5, unit: 'MINUTES') {
                            deployApproved = input(
                                message: 'üöÄ Deploy to Production?',
                                ok: 'Deploy',
                                submitterParameter: 'APPROVER',
                                parameters: [
                                    choice(
                                        name: 'DEPLOYMENT_TYPE',
                                        choices: ['blue-green', 'rolling', 'canary'],
                                        description: 'Choose deployment strategy'
                                    )
                                ]
                            )
                        }
                    } catch (Exception e) {
                        deployApproved = false
                        echo "‚ùå Production deployment not approved or timed out"
                    }
                    
                    if (deployApproved) {
                        sh '''
                            echo "üöÄ Deploying to production environment..."
                            echo "üë§ Approved by: ${APPROVER}"
                            echo "üìã Deployment type: ${DEPLOYMENT_TYPE}"
                            
                            # Aqu√≠ ir√≠a tu l√≥gica de deployment a producci√≥n
                            # Ejemplos:
                            # - Kubernetes deployment
                            # - Docker Swarm
                            # - AWS ECS
                            # - Azure Container Instances
                            
                            # Ejemplo con Kubernetes
                            # kubectl set image deployment/express-api express-api=${DOCKER_REGISTRY}/${DOCKER_IMAGE}
                            # kubectl rollout status deployment/express-api
                            
                            echo "‚úÖ Production deployment completed"
                        '''
                    }
                }
            }
        }
    }
    
    post {
        always {
            script {
                // Limpiar workspace si est√° configurado
                if (env.CLEAN_WORKSPACE_AFTER == 'true') {
                    cleanWs()
                }
                
                // Recopilar artefactos
                archiveArtifacts artifacts: '''
                    package.json,
                    coverage/**/*,
                    trivy-report.json,
                    performance-report.html,
                    security-audit.json
                ''', fingerprint: true, allowEmptyArchive: true
            }
        }
        
        success {
            script {
                // Notificaciones de √©xito
                def message = """
‚úÖ Pipeline SUCCESS - ${env.JOB_NAME} #${env.BUILD_NUMBER}
üåø Branch: ${env.GIT_BRANCH_NAME}
üîç Commit: ${env.GIT_COMMIT_SHORT}
‚è±Ô∏è Duration: ${currentBuild.durationString}
üîó Build URL: ${env.BUILD_URL}
"""
                
                // Slack notification (si est√° configurado)
                try {
                    slackSend(
                        color: 'good',
                        message: message,
                        channel: '#ci-cd'
                    )
                } catch (Exception e) {
                    echo "Slack notification failed: ${e.getMessage()}"
                }
                
                // Email notification
                try {
                    emailext(
                        subject: "‚úÖ SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: message,
                        to: "${env.CHANGE_AUTHOR_EMAIL ?: env.DEFAULT_EMAIL}",
                        mimeType: 'text/plain'
                    )
                } catch (Exception e) {
                    echo "Email notification failed: ${e.getMessage()}"
                }
            }
        }
        
        failure {
            script {
                def message = """
‚ùå Pipeline FAILED - ${env.JOB_NAME} #${env.BUILD_NUMBER}
üåø Branch: ${env.GIT_BRANCH_NAME}
üîç Commit: ${env.GIT_COMMIT_SHORT}
‚è±Ô∏è Duration: ${currentBuild.durationString}
üîó Build URL: ${env.BUILD_URL}
üìã Failed Stage: ${env.STAGE_NAME ?: 'Unknown'}
"""
                
                // Slack notification
                try {
                    slackSend(
                        color: 'danger',
                        message: message,
                        channel: '#ci-cd'
                    )
                } catch (Exception e) {
                    echo "Slack notification failed: ${e.getMessage()}"
                }
                
                // Email notification
                try {
                    emailext(
                        subject: "‚ùå FAILED: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: message,
                        to: "${env.CHANGE_AUTHOR_EMAIL ?: env.DEFAULT_EMAIL}",
                        mimeType: 'text/plain'
                    )
                } catch (Exception e) {
                    echo "Email notification failed: ${e.getMessage()}"
                }
            }
        }
        
        unstable {
            script {
                def message = """
‚ö†Ô∏è Pipeline UNSTABLE - ${env.JOB_NAME} #${env.BUILD_NUMBER}
üåø Branch: ${env.GIT_BRANCH_NAME}
üîç Commit: ${env.GIT_COMMIT_SHORT}
‚è±Ô∏è Duration: ${currentBuild.durationString}
üîó Build URL: ${env.BUILD_URL}
"""
                
                try {
                    slackSend(
                        color: 'warning',
                        message: message,
                        channel: '#ci-cd'
                    )
                } catch (Exception e) {
                    echo "Slack notification failed: ${e.getMessage()}"
                }
            }
        }
        
        cleanup {
            script {
                // Limpiar im√°genes Docker locales para ahorrar espacio
                sh '''
                    # Limpiar im√°genes sin usar
                    docker image prune -f
                    
                    # Limpiar contenedores detenidos
                    docker container prune -f
                    
                    echo "üßπ Docker cleanup completed"
                '''
            }
        }
    }
}